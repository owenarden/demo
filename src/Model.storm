import Data.ByteString (ByteString)
import Data.Text       (Text)

------------------------------------------------------------------------------------------
  
policy IsOP = \it viewer -> 
  itemOwner item == entityKey viewer || itemLevel item == "public"

------------------------------------------------------------------------------------------

User
  emailAddress  Text
  password      ByteString
  firstName     Text
  lastName      Text
  UniqueEmailAddress emailAddress

Item
  owner         UserId
  description   Text
  level         Text

  read   [ description ] @IsOP 